root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_size = 4
indent_style = tab

[*.md]
indent_style = space
indent_size = 2
# Wraps text at the max_line_length automatically.
max_line_length = 80
prose_wrap = always

[Makefile]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2
